<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ResultController</servlet-name>
        <servlet-class>by.epam.lab.servlets.ResultController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResultController</servlet-name>
        <url-pattern>/ResultController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StartController</servlet-name>
        <servlet-class>by.epam.lab.servlets.StartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartController</servlet-name>
        <url-pattern>/StartController</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterName</filter-name>
        <filter-class>by.epam.lab.utils.TypedUrlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterName</filter-name>
        <servlet-name>ResultController</servlet-name>
        <servlet-name>StartController</servlet-name>
    </filter-mapping>
</web-app>